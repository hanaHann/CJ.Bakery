window.addEventListener("load",function(){

    var stepInf = document.querySelectorAll(".notice .container .card .inf");
    var stepCard = document.querySelectorAll(".notice .container .card");
    console.log(stepInf)
    console.log(stepCard[1])

    for(i=0 ; i<stepCard.length ; i++){
        stepCard[i].addEventListener("click",function(){
            for(j=0 ; j<stepInf.length ; j++){
                console.log("點了")
                
                if(stepInf.classList.contains("show") == false){
                    stepInf[j].classList.add("show")
                }else{
                    stepInf[j].classList.remove("show")
                }
            }
        })

    }

})



